<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>User Registration</title>
    <link rel="shortcut icon" href="logo.jpg" type="image/x-icon">
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/5.1.3/css/bootstrap.min.css" rel="stylesheet">
   <style>
      
        body {
            margin: 0;
            padding: 0;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Jost', sans-serif;
            background: linear-gradient(to bottom, #0f0c29, #302b63, #24243e);
        }

        .container {
            max-width: 400px;
            margin: 50px auto;
            padding: 30px;
            border-radius: 10px;
            background-color: #fff;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h2 {
            margin-bottom: 30px;
            text-align: center;
            color: #007bff; /* Blue color for heading */
        }

        .form-label {
            font-weight: bold;
            color: #573b8a; /* Purple color for form labels */
        }

        .form-control {
            width: 380px;
            
            margin-bottom: 30px;
            border: 2px solid #573b8a; /* Purple border for form controls */
            border-radius: 5px;
            padding: 15px;
            transition: border-color 0.3s ease;
        }

        .form-control:focus {
            outline: none;
            border-color: #6d44b8; /* Darker purple border on focus */
        }

        .btn-primary {
            width: 100%;
            background-color: #573b8a; /* Purple background for button */
            border-color: #573b8a; /* Purple border for button */
            border-radius: 5px;
            font-weight: bold;
            transition: background-color 0.3s ease, border-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #6d44b8; /* Darker purple on hover */
            border-color: #6d44b8; /* Darker purple border on hover */
        }

        .logo {
            text-align: center;
            margin-bottom: 30px;
        }

        .logo img {
            width: 100px;
            height: 100px;
            border-radius: 50%; /* Circular border for logo */
            border: 2px solid #fff; /* White border for logo */
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.2); /* Shadow effect for logo */
        }
    </style>
   
</head>
<body>
    <div class="container">
        <div class="logo">
            <img src="https://cdn1.iconfinder.com/data/icons/elevator/154/elevator-user-man-ui-round-login-1024.png" alt="Logo">
        </div>
        <h2>User Registration</h2>
        <form action="/register" method="POST" onsubmit="return validatePassword()">
            <div class="mb-3">
                <label for="email" class="form-label">Email address</label>
                <br>
                <input type="email" class="form-control" id="email" name="email" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password</label>
                <br>
                <input type="password" class="form-control" id="password" name="password" required>
                <p id="passwordHelp" class="form-text text-muted">Password must be at least 8 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character.</pre>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>
    </div>

    <script>
        function validatePassword() {
            var password = document.getElementById("password").value;
            var strongRegex = new RegExp("^(?=.*[a-z])(?=.*[A-Z])(?=.*[0-9])(?=.*[!@#$%^&*])(?=.{8,})");
            if (!strongRegex.test(password)) {
                alert("Password must be at least 8 characters long and contain at least one uppercase letter, one lowercase letter, one number, and one special character.");
                return false;
            }
            return true;
        }
    </script>
</body>
</html>
